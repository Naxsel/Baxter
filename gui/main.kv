#:import ft kivy.uix.screenmanager

<ConnectBar>:
    pos_hint: {'top':1}
    background_color: 9, 1, 1, 0.8
    ActionView:
        use_separator: True
        ActionPrevious:
            title: 'Baxter'
            with_previous: False
        ActionOverflow:
        ActionGroup:
            text: 'Group1'
            ActionButton:
                text: 'Connect'
                on_release: root.parent.parent.parent.connect()
            ActionButton:
                icon: '../images/connect.png'
                on_release: root.parent.parent.parent.connect()
        ActionGroup:
            text: 'Group3'
            ActionButton:
                text: 'About'
                on_release: root.parent.parent.parent.about()
            ActionButton:
                icon: '../images/about.png'
                on_release: root.parent.parent.parent.about()

<DisconnectBar>:
    pos_hint: {'top':1}
    background_color: 9, 1, 1, 0.8
    ActionView:
        use_separator: True
        ActionPrevious:
            title: 'Baxter'
            with_previous: True
            on_release: root.parent.parent.parent.disconnect()
        ActionOverflow:
        ActionGroup:
            text: 'Group2'
            ActionButton:
                text: 'Disconnect'
                on_release: root.parent.parent.parent.disconnect()
            ActionButton:
                icon: '../images/disconnect.png'
                on_release: root.parent.parent.parent.disconnect()

<AboutBar>:
    pos_hint: {'top':1}
    background_color: 9, 1, 1, 0.8
    ActionView:
        use_separator: True
        ActionPrevious:
            title: 'Baxter'
            with_previous: True
            on_release: root.parent.parent.parent.back()
        ActionOverflow:
        ActionGroup:
            text: 'Group1'
            ActionButton:
                text: 'Connect'
                on_release: root.parent.parent.parent.connect()
            ActionButton:
                icon: '../images/connect.png'
                on_release: root.parent.parent.parent.connect()

<ConnectionScreen>:
    name: 'Connection'
    GridLayout:
        cols:1
        ConnectBar:
            size_hint: 1,.1
        FloatLayout:
            background_color: 1, 1, 1, 0.5
            Label:
                text: 'Baxter Robot User Interface'
                font_size: 50
                pos: 0,200
            Image:
                source: '../images/logo.png'
                rgba: (1,1,1,2)
                pos: -60,90
            Image:
                source: '../images/baxter.png'
                rgba: (1,1,1,2)
                pos: 90,90
            Label:
                text: 'Connect to the Baxter launching the server first'
                font_size: 24
                pos: 20,0
            Label:
                text: 'On a Baxter terminal instance run the server_run script or execute'
                font_size: 18
                pos: 20,-60
            Label:
                text:'$ rosrun baxter_examples server.py\n\n Then click on the Connect Button'
                font_size: 18
                pos: 20,-105
            Label:
                text: 'This application belongs to a research project concerning the use of the Baxter in the Factory of the Future'
                font_size: 16
                pos: 0,-220


<MainScreen>:
    name: 'main'
    id: 'mainscr'
    GridLayout:
        cols:1
        DisconnectBar:
            size_hint: 1,.1
        TabbedPanel:
            orientation: 'vertical'
            do_default_tab: False
            tab_pos: 'top_mid'
            tab_width: self.size[0]/len(self.tab_list)
            TabbedPanelItem:
                background_color: 1, 1, 1, 0.5
                text: 'Baxter Essentials'
                BoxLayout:
                    background_color: 1, 1, 1, 0.5
                    orientation: 'horizontal'
                    Button:
                        text: 'Disconnect'
                        size_hint: .4,1
                        on_release: root.parent.disconnect()
                    Button:
                        text: 'Slide 4'
                        on_press: print "Slide 4 pressed"
            TabbedPanelItem:
                background_color: 1, 1, 1, 0.5
                text: 'Custom Scripts'
                BoxLayout:
                    orientation: 'horizontal'
                    BoxLayout:
                        size_hint: .4,1
                        orientation: 'vertical'
                        Button:
                            text: 'List of Scripts'
                            on_release: root.send2()
                        Button:
                            text: 'Open Cilinder'
                    BoxLayout:
                        orientation: 'vertical'
                        Label:
                            text: 'Demo program, which shows how Baxter\ncan disassemble a cilinder and store the pieces'
                            text_size: self.size
                            halign: 'center'
                            valign: 'middle'
                            size_hint: 1,2
                        Button:
                            text: 'Run'
                            on_release:
                            halign: 'center'
                            on_release: root.open_cilinder()

<AboutScreen>:
    name: 'About'
    GridLayout:
        cols:1
        AboutBar:
            size_hint: 1,.1
        FloatLayout:
            Image:
                source: '../images/profile.jpg'
                pos: 280,140
            Label:
                text: 'Me, Myself, I'
                font_size: 40
                pos: -100,200
            Label:
                text: 'My name is Alejandro Solanas,\nI\'am a computer engineer student from Spain,\ndoing a Master Project for Luleå University of Technology, Sweden.'
                font_size: 18
                pos: -120,120
            Label:
                text: 'This project was created under de supervision and advise of Arash Mousavi,\nAssociate Senior Lecturer at Luleå University of Technology.'
                font_size: 18
                pos: -80,20


ScreenManagement:
    transition: ft.WipeTransition()
    ConnectionScreen:
    MainScreen:
    AboutScreen:



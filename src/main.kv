        CustomList:
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Open Cylinder\n\nScript which shows how Baxter\ncan disassemble a cylinder and store the pieces\n\n\nPlease don\'t press any button until the action is done'
                text_size: self.size
                halign: 'center'
                valign: 'middle'

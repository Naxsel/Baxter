<CameraStreamScreen>:
    name: 'camera'
    BoxLayout:
        orientation: 'horizontal'
        CustomList:
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Camera Stream\n\nSends the camera image to baxter\'s display\n\n Due to Baxter thread limitations, permanent process are not suggested to run using this UI, if you do, kill the server and client process when desired\n\n Alternatively, this process can be executed in other terminal using the script with rosrun'
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                size_hint: 1,2
            Button:
                background_color: 3, 0.5, 0.5, 0.8
                text: 'Run'
                on_release:
                halign: 'center'
                on_release: root.run()


ScreenManagement:
    transition: ft.WipeTransition()
    ConnectionScreen:
    MainScreen:
    AboutScreen:


<Manager1>
    transition: ft.NoTransition()
    CustomScreen:
    HelloScreen:
    OpenCylinderScreen:
    CameraStreamScreen:


<Manager2>
    transition: ft.NoTransition()
    EssentialScreen:
    EssentialScreen1:
    EssentialScreen2:
    EssentialScreen3:
    EssentialScreen4:
    EssentialScreen5:
